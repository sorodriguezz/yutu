{
  "name": "yutu",
  "author": "sorodriguezz",
  "version": "1.0.0",
  "description": "Aplicaci√≥n para reproducir musica desde youtube",
  "main": "dist/main/main.js",
  "scripts": {
    "build": "tsc && npm run copy:assets",
    "copy:assets": "copyfiles -u 2 \"src/player/player*.html\" \"src/player/player*.js\" dist/player && copyfiles -u 2 \"src/renderer/index.html\" \"src/renderer/styles.css\" \"src/renderer/renderer.js\" dist/renderer",
    "start": "npm run build && electron .",
    "dist": "npm run build && electron-builder"
  },
  "build": {
    "appId": "com.sebastian.ytlocalplayer",
    "productName": "YT Local Player",
    "files": [
      "dist/**/*"
    ],
    "asar": true,
    "asarUnpack": [
      "dist/renderer/**/*",
      "dist/player/**/*"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ]
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ]
    }
  },
  "keywords": [],
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^25.0.9",
    "copyfiles": "^2.4.1",
    "electron": "^39.2.7",
    "electron-builder": "^26.4.0",
    "typescript": "^5.9.3"
  }
}
